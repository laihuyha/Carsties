{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auctionsRead": {
        "ClusterId": "auctionsCluster",
        "Match": {
          "Path": "auctions/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transform": [{ "PathPattern": "api/auctions/{**catch-all}" }]
      },
      "auctionsWrite": {
        "ClusterId": "auctionsCluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "auctions/{**catch-all}",
          "Methods": ["POST", "PUT", "DELETE", "PATCH"]
        },
        "Transform": [{ "PathPattern": "api/auctions/{**catch-all}" }]
      },
      "search": {
        "ClusterId": "searchCluster",
        "Match": {
          "Path": "search/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transform": [{ "PathPattern": "api/search/{**catch-all}" }]
      }
    }
  }
}
