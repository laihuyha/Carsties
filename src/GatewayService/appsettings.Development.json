{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "IdentityServiceUrl": "http://localhost:5002",
  "ReverseProxy": {
    "Routes": {
      "auctionsRead": {
        "ClusterId": "auctionsCluster",
        "Match": {
          "Path": "auctions/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transform": [{ "PathPattern": "api/auctions/{**catch-all}" }]
      },
      "auctionsWrite": {
        "ClusterId": "auctionsCluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "auctions/{**catch-all}",
          "Methods": ["POST", "PUT", "DELETE", "PATCH"]
        },
        "Transform": [{ "PathPattern": "api/auctions/{**catch-all}" }]
      },
      "search": {
        "ClusterId": "searchCluster",
        "Match": {
          "Path": "search/{**catch-all}",
          "Methods": ["GET"]
        },
        "Transform": [{ "PathPattern": "api/search/{**catch-all}" }]
      }
    },
    "Clusters": {
      "auctionsCluster": {
        "Destinations": {
          "auctionsApi": {
            "Address": "http://localhost:5073/"
          }
        }
      },
      "searchCluster": {
        "Destinations": {
          "searchApi": {
            "Address": "http://localhost:5289"
          }
        }
      }
    }
  }
}
